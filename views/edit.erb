<form action='/update/<%= params[:name] %>' id='config_form'>
  <input type='hidden' id='config' name='config' value='<%= params[:name] %>'>
  <%= text_fields_for "ServerName", "DocumentRoot" %>
  <p>
    <label for='password'>Password:</label>
    <input type='password' name='password' id='password'>
  </p>
  <script>$(document).ready(function() { folder_selector("<%= @config['DocumentRoot'] %>"); });</script>
  <p>
    <input type='submit' name='submit' value='submit' onclick='update(); return false'>
  </p>
</form>