<h1>Editing Passenger</h1>
<form id='config_form'>
  <input type='hidden' id='config' name='config' value='<%= params[:name] %>'>
  <%= text_fields_for "ServerName", "DocumentRoot" %>
  <script>$(document).ready(function() { folder_selector("<%= @config['DocumentRoot'] %>"); });</script>
  <% if @password_required %>
    <p>
      <label for='password'>Password:</label>
      <input type='password' name='password' id='password'>
    </p>
  <% end %>
  <p>
    <input type='submit' name='submit' value='Update' onclick='update(); return false'>
    <input type='button' name='Delete' onclick='remove("<%= params[:name] %>")' value="delete">
  </p>
</form>